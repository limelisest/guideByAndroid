<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.limelisest.guide.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/navigation_buy_list"
        android:name="com.limelisest.guide.ui.buy_list.ItemFragment"
        android:label="@string/title_buy_list"
        tools:layout="@layout/fragment_buy_list" />

    <fragment
        android:id="@+id/navigation_shopping_cart"
        android:name="com.limelisest.guide.ui.shopping_cart.ShoppingCartItemFragment"
        android:label="@string/title_shopping_cart"
        tools:layout="@layout/fragment_shopping_cart_list" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.limelisest.guide.ui.register.RegisterFragment"
        android:label="注册"
        tools:layout="@layout/fragment_register" />
</navigation>